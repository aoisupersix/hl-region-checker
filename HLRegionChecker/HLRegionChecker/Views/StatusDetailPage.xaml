<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HLRegionChecker.Views.StatusDetailPage"
             Title="H-Lab">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" Android="20" />
    </ContentPage.Padding>

    <StackLayout>
        <Label HeightRequest="30"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Text="みんなのステータス：" />
        <ListView ItemsSource="{Binding Members.Value}" HasUnevenRows="True" SeparatorVisibility="None" RowHeight="120">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout BackgroundColor="#AAD6EC" Margin="2, 4, 2, 4" Orientation="Horizontal">
                            <Image Source="Icon_Menu" HeightRequest="50" />
                            <StackLayout Orientation="Vertical">
                                <Label HorizontalOptions="Start"
                                   VerticalOptions="Start"
                                   TextColor="DarkBlue"
                                   FontSize="Large"
                                   Text="{Binding Name}" />
                                <Label HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   FontSize="50"
                                   Text="帰宅" />
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>