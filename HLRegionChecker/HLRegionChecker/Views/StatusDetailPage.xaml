<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:HLRegionChecker.Converters"
             x:Class="HLRegionChecker.Views.StatusDetailPage"
             Title="ステータス">

    <ContentPage.Resources>
        <ResourceDictionary>
            <cv:ResourceConverter x:Key="resConverter" />
            <cv:StatusPropertyConverter x:Key="statePropertyConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" Android="20" />
    </ContentPage.Padding>

    <StackLayout>
        <ListView ItemsSource="{Binding Members.Value}"
                  HasUnevenRows="True"
                  SeparatorVisibility="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout BackgroundColor="{Binding Status, Converter={StaticResource statePropertyConverter}, ConverterParameter='BgColor_Hex'}"
                                     Margin="4"
                                     Orientation="Horizontal">
                            <Image Source="{Binding Converter={StaticResource resConverter}, ConverterParameter='HLRegionChecker.Resources.Icon_Dog.png'}"
                                   Aspect="AspectFit"
                                   HeightRequest="40"
                                   Margin="20,0,20,0" />
                            <StackLayout Orientation="Vertical"
                                         VerticalOptions="Start">
                                <Label HorizontalOptions="Start"
                                       TextColor="{Binding Status, Converter={StaticResource statePropertyConverter}, ConverterParameter='TextColor_Hex'}"
                                       FontSize="Default"
                                       Margin="0,7,0,0"
                                       Text="{Binding Name}" />
                                <Label VerticalTextAlignment="Start"
                                       FontSize="35"
                                       Margin="0,5,0,5"
                                       TextColor="{Binding Status, Converter={StaticResource statePropertyConverter}, ConverterParameter='TextColor_Hex'}"
                                       Text="{Binding Status, Converter={StaticResource statePropertyConverter}, ConverterParameter='Name'}" />
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>